{

programs: [
	{
		name: "blend",
		vertexSource: "lomo:shaders/full_frame.vert",
		fragmentSource: "lomo:shaders/fabulous/blend.frag",
		samplers: [
			"u_solid_color", "u_solid_depth",
			"u_translucent_terrain_color", "u_translucent_terrain_depth",
			"u_translucent_entity_color", "u_translucent_entity_depth",
			"u_translucent_particles_color", "u_translucent_particles_depth",
			"u_misc_color", "u_misc_depth"
		],
	}
],

fabulous: { passes: [
	{
		name: "blend",
		program: "blend",
		framebuffer: "blended",
		samplerImages: [
			"solid_color", "solid_depth",
			"translucent_terrain_color", "translucent_terrain_depth",
			"translucent_entity_color", "translucent_entity_depth",
			"translucent_particles_color", "translucent_particles_depth",
			"misc_color", "misc_depth",
		]
	}
]},

images: [
	{
		name: "blended_color",
		internalFormat: "RGBA16F",
		pixelFormat: "RGBA",
		texParams: [
			{ name: "TEXTURE_MIN_FILTER", val: "NEAREST" },
			{ name: "TEXTURE_MAG_FILTER", val: "NEAREST" },
			{ name: "TEXTURE_WRAP_S", val: "CLAMP_TO_EDGE" },
			{ name: "TEXTURE_WRAP_T", val: "CLAMP_TO_EDGE" }
		]
	},
	{
		name: "blended_depth",
		internalFormat: "R32F",
		pixelFormat: "RED",
		pixelDataType: "FLOAT",
		texParams: [
			{ name: "TEXTURE_MIN_FILTER", val: "NEAREST" },
			{ name: "TEXTURE_MAG_FILTER", val: "NEAREST" },
			{ name: "TEXTURE_WRAP_S", val: "CLAMP_TO_EDGE" },
			{ name: "TEXTURE_WRAP_T", val: "CLAMP_TO_EDGE" },
			{ name: "TEXTURE_COMPARE_MODE", val: "NONE" }
		]
	}
],

framebuffers: [
	{
		name: "blended",
		colorAttachments: [
			{ image: "blended_color" },
			{ image: "blended_depth" }
		]
	},
]

}